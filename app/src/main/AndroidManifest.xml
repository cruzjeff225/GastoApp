<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GastoApp">

        <!-- Splash Activity como launcher -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity de Login -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.GastoApp" />

        <!-- Activity de Register -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.GastoApp" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Activity for Add Transactions -->
        <activity
            android:name=".ui.transaction.AddTransactionActivity"
            android:exported="false"
            android:theme="@style/Theme.GastoApp" />

        <!-- Activity for Savings Goals -->
        <activity
            android:name=".ui.savingsgoal.AddSavingsGoalActivity"
            android:exported="false"
            android:theme="@style/Theme.GastoApp" />


    </application>

</manifest>