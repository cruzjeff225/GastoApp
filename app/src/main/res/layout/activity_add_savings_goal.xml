<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@drawable/bg_icon_circle"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="AtrÃ¡s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva Meta de Ahorro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Goal Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Meta"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etGoalName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_input"
                android:hint="Ej: Nueva casa, Auto, Viaje..."
                android:inputType="textCapSentences"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginBottom="24dp"
                android:maxLines="1"/>

            <!-- Target Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Objetivo"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTargetAmount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_input"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginBottom="24dp"/>

            <!-- Current Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Inicial (Opcional)"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etCurrentAmount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_input"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginBottom="24dp"/>

            <!-- Icon Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ãcono"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIcons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Color Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Deadline (Optional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha LÃ­mite (Opcional)"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/btnSelectDeadline"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_input"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSelectedDeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sin fecha lÃ­mite"
                    android:textSize="16sp"
                    android:textColor="@color/text_hint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“…"
                    android:textSize="20sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnClearDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitar fecha lÃ­mite"
                android:textSize="12sp"
                android:textColor="@color/error"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n (Opcional)"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/background_input"
                android:hint="Â¿Por quÃ© es importante esta meta?"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginBottom="32dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_button_pressed"
                android:text="Crear Meta"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>